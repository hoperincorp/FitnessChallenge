<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desktop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#737077"
    tools:context="com.hoperincorp.android.fitnesschallenge.frames.desktopFrame">

    <TextView
        android:text="Название"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameString"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:textColor="#f0c060"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:text="Тип"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:layout_alignBottom="@+id/types"
        android:layout_alignStart="@+id/imageString"
        android:layout_marginStart="25dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_backward"
        android:background="@mipmap/panel_backward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_setting"
        android:background="@mipmap/panel_setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_accept"
        android:background="@mipmap/panel_accept"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/panel_backward"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_delete"
        android:background="@mipmap/panel_delete"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/panel_setting"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Нет записи"
        android:ems="10"
        android:id="@+id/challengeName"
        android:textColor="#9f7030"
        android:background="#f0c060"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/panel_prev_form" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/types"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/challengeName"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/challengeName" />

    <TextView
        android:text="Картинка"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/previewImage"
        android:layout_alignStart="@+id/nameString" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/note_default_color"
        android:id="@+id/previewImage"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/types"
        android:layout_toStartOf="@+id/panel_setting" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_prev_form"
        android:background="@mipmap/panel_support_prev"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignTop="@+id/imageString"
        android:layout_toStartOf="@+id/previewImage" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_next_form"
        android:background="@mipmap/panel_support_next"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignTop="@+id/panel_prev_form"
        android:layout_toEndOf="@+id/previewImage" />

</RelativeLayout>
