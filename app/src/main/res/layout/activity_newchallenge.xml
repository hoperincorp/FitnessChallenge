<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desktop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#737077"
    tools:context="com.hoperincorp.android.fitnesschallenge.frames.desktopFrame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_setting"
        android:background="@mipmap/panel_setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_accept"
        android:background="@mipmap/panel_accept"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/panel_backward"
        android:layout_marginStart="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_delete"
        android:background="@mipmap/panel_delete"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/panel_setting"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/types"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/challengeName"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/challengeName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supportPrev"
        android:background="@mipmap/panel_prev"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/panel_delete"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Тип"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="5"
        android:layout_alignTop="@+id/types"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/preview"
        android:id="@+id/typeSelect"
        android:layout_below="@+id/colorSelect"
        android:layout_alignStart="@+id/panel_delete"
        android:layout_marginTop="19dp"
        android:scaleType="matrix"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:visibility="invisible" />

    <TextView
        android:text="Цвет"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="5"
        android:textAlignment="center"
        android:layout_alignTop="@+id/colorSelect"
        android:layout_marginTop="36dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Название"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/typeString"
        android:ems="5"
        android:textAlignment="center" />

    <TextView
        android:text="Цель"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/targetString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="5"
        android:textAlignment="center"
        android:layout_below="@+id/typeSelect"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Нет записи"
        android:ems="10"
        android:id="@+id/challengeName"
        android:background="#f0c060"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#9f7030" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="1000"
        android:ems="10"
        android:id="@+id/target"
        android:textColor="#9f7030"
        android:background="#f0c060"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/targetString"
        android:layout_alignBottom="@+id/targetString"
        android:layout_toEndOf="@+id/panel_accept" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/preview"
        android:id="@+id/colorSelect"
        android:layout_marginTop="18dp"
        android:scaleType="matrix"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:layout_below="@+id/types"
        android:layout_alignStart="@+id/typeSelect"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorPreview"
        android:background="@mipmap/previewimage_default"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_alignTop="@+id/colorSelect"
        android:layout_alignEnd="@+id/colorSelect"
        android:layout_margin="7dp" />

    <TextView
        android:text="Тип тренировки"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainingTypeString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:textAlignment="center"
        android:ems="5"
        android:layout_alignTop="@+id/typeSelect"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/typeSelect"
        android:layout_alignEnd="@+id/typeSelect"
        android:id="@+id/typePreview"
        android:background="@mipmap/previewimage_default"
        android:layout_margin="7dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supportNext"
        android:background="@mipmap/panel_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_backward"
        android:background="@mipmap/panel_backward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
