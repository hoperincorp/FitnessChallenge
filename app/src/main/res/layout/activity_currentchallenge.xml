<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desktop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#737077"
    tools:context="com.hoperincorp.android.fitnesschallenge.frames.desktopFrame">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_backward"
        android:background="@mipmap/panel_backward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_setting"
        android:background="@mipmap/panel_setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_accept"
        android:background="@mipmap/panel_accept"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/panel_backward"
        android:layout_marginStart="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panel_delete"
        android:background="@mipmap/panel_delete"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/panel_setting"
        android:layout_marginEnd="5dp" />

    <TextView
        android:text="23:59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeNow"
        android:textSize="18sp"
        android:textColor="#9f7030"
        android:ems="5"
        android:textAlignment="center"
        android:background="#f0c060"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/timeString"
        android:layout_alignStart="@+id/dateNow"
        android:layout_alignEnd="@+id/dateNow" />

    <TextView
        android:text="999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalNow"
        android:textSize="18sp"
        android:textColor="#9f7030"
        android:ems="5"
        android:textAlignment="center"
        android:background="#f0c060"
        android:layout_below="@+id/totalString"
        android:layout_alignStart="@+id/timeNow"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/timeNow" />

    <TextView
        android:text="Дата"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/dateNow" />

    <TextView
        android:text="Время"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateNow"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/timeNow" />

    <TextView
        android:text="Общее количество"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/timeNow"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/timeNow" />

    <TextView
        android:text="Текущее количество"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/totalNow"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/totalNow" />

    <TextView
        android:text="14-Фев-1970"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateNow"
        android:textSize="18sp"
        android:textColor="#9f7030"
        android:ems="5"
        android:textAlignment="center"
        android:background="#f0c060"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/dateString"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/panel_delete" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:ems="3"
        android:id="@+id/countNow"
        android:textColor="#9f7030"
        android:background="#f0c060"
        android:inputType="number"
        android:layout_below="@+id/countString"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Примечание"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noteString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/typeNow"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/typeNow" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/noteNow"
        android:text="Примечание"
        android:textColor="#9f7030"
        android:background="#f0c060"
        android:layout_below="@+id/noteString"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/noteString" />

    <TextView
        android:text="Нет записи"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workoutString"
        android:textSize="18sp"
        android:textColor="#f0c060"
        android:ems="9"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dateString" />

    <TextView
        android:text="килограммы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeNow"
        android:textSize="18sp"
        android:textColor="#9f7030"
        android:ems="4"
        android:textAlignment="center"
        android:background="#f0c060"
        android:layout_alignBaseline="@+id/countNow"
        android:layout_alignBottom="@+id/countNow"
        android:layout_alignStart="@+id/panel_accept"
        android:layout_alignEnd="@+id/countString" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workoutNow"
        android:background="@mipmap/note_add_new_upgrade"
        android:layout_marginEnd="24dp"
        android:layout_alignTop="@+id/dateNow"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
